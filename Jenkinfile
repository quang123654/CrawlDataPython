pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/quang123654/CrawlDataPython.git'

                bat 'mvn -B compile'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
            steps {
                bat 'mvn package'

                archiveArtifacts 'target/*.jar'
            }
        }
    }
}
